<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Círculo con número de bicis -->
        <TextView
            android:id="@+id/tvBikesCircle"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/circle_bg"/>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <!-- Bicis y espacios en la misma línea con iconos -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- Icono bicicleta -->
                <ImageView
                    android:id="@+id/icBike"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_directions_bike_24"
                    android:contentDescription="Bicicletas"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bicis: 0"
                    android:textSize="14sp"
                    android:textColor="#000000"/>

                <!-- Separador uniforme -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="0dp" />

                <!-- Icono parking -->
                <ImageView
                    android:id="@+id/icFree"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_local_parking_24"
                    android:contentDescription="Espacios libres"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/tvFree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Espacios: 0"
                    android:textSize="14sp"
                    android:textColor="#000000"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
